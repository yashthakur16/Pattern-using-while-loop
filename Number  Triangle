#include <iostream>
using namespace std;
int main()
{
    int n,i=1;
    cin>>n;
    while(i<=n)
    {
        int j=1;
        while(j<=n-i)
        {
            cout<<" ";
            j=j+1;
        }
        int k=1;
        while(k<=i)
        {
            cout<<k;
            k=k+1;
        }
        int m=1;
        int value=i-1;
        while(m<=i-1)
        {
            cout<<value;
            value=value-1;
            m=m+1;
        }
        int l=1;
        while(l<=n-i)
        {
            cout<<" ";
            l=l+1;
        }
        cout<<endl;
        i=i+1;
    }
}
